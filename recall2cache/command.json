{
  "name": "recall2cache",
  "label": "recall2cache",
  "description": "Recall files to cache",
  "version": "2025.08.14",
  "schema-version": "1.0",
  "info-url": "https://github.com/aswinnarayanan/recall2cache",
  "image": "ghcr.io/aswinnarayanan/recall2cache:2025.08.14",
  "type": "docker",
  "command-line": "/usr/local/bin/recall2cache /input > /output/recall.log",
  "mounts": [
    {
      "name": "dicom-in",
      "writable": false,
      "path": "/input"
    },
    {
      "name": "log-out",
      "writable": true,
      "path": "/output"
    }
  ],
  "environment-variables": {},
  "ports": {},
  "inputs": [],
  "outputs": [
    {
      "name": "log",
      "description": "Command output log",
      "required": true,
      "mount": "log-out"
    }
  ],
  "xnat": [
    {
      "name": "recall2cache-scan",
      "label": "recall2cache",
      "description": "Recall files to cache",
      "contexts": [
        "xnat:imageScanData"
      ],
      "external-inputs": [
        {
          "name": "scan",
          "description": "The scan to recall.",
          "type": "Scan",
          "matcher": "'DICOM' in @.resources[*].label",
          "required": true,
          "load-children": true
        }
      ],
      "derived-inputs": [
        {
          "name": "scan-dicom-resource",
          "description": "The DICOM resource on the scan",
          "type": "Resource",
          "matcher": "@.label == 'DICOM'",
          "required": true,
          "provides-files-for-command-mount": "dicom-in",
          "load-children": true,
          "derived-from-wrapper-input": "scan",
          "multiple": false
        }
      ],
      "output-handlers": [
        {
          "name": "log-resource",
          "accepts-command-output": "log",
          "as-a-child-of": "scan",
          "type": "Resource",
          "label": "LOG",
          "tags": []
        }
      ]
    }
  ],
  "container-labels": {},
  "generic-resources": {},
  "ulimits": {},
  "secrets": [],
  "visibility": "public"
}